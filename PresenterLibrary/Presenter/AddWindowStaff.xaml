<Window x:Class="PresenterLibrary.Presenter.AddWindowStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresenterLibrary.Presenter"
        mc:Ignorable="d"
        Title="Добавить сотрудников" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ФИО:" />
            <TextBox x:Name="txtName" Width="300" />

            <TextBlock Text="Работа:" Margin="0,10,0,0" />
            <TextBox x:Name="txtRole" Width="300" />

            <TextBlock Text="Название учреждения:" Margin="0,10,0,0" />
            <ComboBox x:Name="cmbHospitalName" Width="300" />

            <TextBlock Text="Специальность:" Margin="0,10,0,0" />
            <ComboBox x:Name="cmbSpecializationName" Width="300" />

            <Button Content="Добавить" Width="100" Margin="0,20,0,0" Click="btnAddStaff_Click"/>
        </StackPanel>
    </Grid>
</Window>
