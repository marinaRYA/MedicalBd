<Window x:Class="PresenterLibrary.Presenter.AddMedicalFacility"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresenterLibrary.Presenter"
        mc:Ignorable="d"
        Title="Добавить Медицинское учреждение" Height="300" Width="500">
    <Grid Height="286" VerticalAlignment="Top">
        <StackPanel Margin="10,0,10,0" Height="266" VerticalAlignment="Center">
            <Label Content="Название учреждения"/>
            <TextBox Name="NameTextBox" Margin="0,0,0,10" />
            <Label Content="Тип учреждения"/>
            <ComboBox Name="TypeTextBox" Margin="0,0,0,10" />
            <Label Content="Адрес учреждения"/>
            <TextBox Name="AddressTextBox" Margin="0,0,0,10" />

            <Label Content="Родительское учреждения"/>
            <ComboBox Name="ParentHospitalComboBox" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SaveButton" Content="Сохранить" Width="75" Margin="0,0,75,0" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Закрыть" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
