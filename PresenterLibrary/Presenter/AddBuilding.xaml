<Window x:Class="PresenterLibrary.Presenter.AddBuilding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresenterLibrary.Presenter"
        mc:Ignorable="d"
        Title="Добавить корпус" Height="270" Width="300">
    <Grid Height="245" VerticalAlignment="Top">
        <StackPanel Height="225" VerticalAlignment="Center" HorizontalAlignment="Center" Width="243">
            <Label Content="Название медицинского учреждения"/>
            <ComboBox Name="HospitalNameComboBox" Margin="0,0,0,10" Width="236" />

            <Label Content="Название корпуса"/>
            <TextBox Name="BuildingNameTextBox" Margin="0,0,0,10" Width="236" />

            <Label Content="Адрес корпуса"/>
            <TextBox Name="AddressTextBox" Margin="0,0,0,10" Width="237" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SaveButton" Content="Сохранить" Width="70" Margin="0,0,95,0" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Закрыть" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
