<Window x:Class="MedicalBd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalBd"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="1200"
        ResizeMode="NoResize" WindowState="Normal">
    <Grid>

        <StackPanel Name="MenuPanel" Orientation="Vertical">

        </StackPanel>


        <StackPanel Name="ButtonPanel" Background="White" Orientation="Horizontal" Margin="0,325,0,5">
            <TextBox x:Name="searchTextBox" Width="200" Height="30" Margin="10"/>
            <Button Content="Поиск" Click="SearchButton_Click" Margin="20" Width="70"/>
            <Button x:Name="AddButton" Content="Добавить" Margin="20" Width="70" Click="AddButton_Click"/>
            <Button x:Name="EditButton" Content="Редактировать" Margin="20" Width="90" Click="EditButton_Click"/>
            <Button x:Name="DeleteButton" Content="Удалить" Margin="20" Width="70" Click="DeleteButton_Click"/>


        </StackPanel>
        <StackPanel Name="GridPanel" Background="WhiteSmoke" Orientation="Vertical" Margin="0,20,0,84">

        </StackPanel>
    </Grid>
</Window>
